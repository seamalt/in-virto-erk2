{
    "version": 2,
    "builds": [
      { "src": "backend/api/app.py", "use": "@vercel/python", 
        "config": {
            "maxDuration": 60,
            "maxLambdaSize": "15mb",
            "runtime": "python3.12.4"
        }
      },
      { "src": "frontend/package.json", "use": "@vercel/static-build", 
        "config": {
            "distDir": "build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/api/app.py" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ],
    "build": {
    "env": {
      "BABEL_DISABLE_CACHE": "1"
      }
    }
  }
  